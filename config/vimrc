set number
set relativenumber
set tabstop=4
set grepprg=ag\ --nogroup\ --nocolor

:nnoremap <C-B> :CtrlPDir<CR>

let g:ackprg = 'ag --nogroup --nocolor --column'
let g:ctrlp_user_command = 'ag %s -l --hidden --nocolor -g ""'
let g:ctrlp_use_caching = 0

call plug#begin('~/.vim/plugged')

